{% set product = hookable_metadata.context.product %}

<div class="page-body">
    <div class="container-xl">

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                <tr>
                    <th scope="col">Key</th>
                    <th scope="col">Value</th>
                </tr>
                </thead>
                <tbody>

                <tr>
                    <td>
                        Name
                    </td>
                    <td>
                        {{ product.name }}
                    </td>
                <tr>
                <tr>
                    <td>
                        Description
                    </td>
                    <td>
                        {{ product.Description }}
                    </td>
                <tr>
                <tr>
                    <td>
                        Type
                    </td>
                    <td>
                        {{ product.productType.typeName }}
                    </td>
                <tr>
                <tr>
                    <td>
                        Taxonomy
                    </td>
                    <td>
                        {{ product.productTaxonomy.name }}
                    </td>
                <tr>
                <tr>
                    <td>
                        Pharma - Active Ingredient
                    </td>
                    <td>
                        {{ product.pharmaActiveIngredient.name }}
                    </td>
                <tr>
                <tr>
                    <td>
                        Pharma - Strength
                    </td>
                    <td>
                        {{ product.PharmaStrength }}
                    </td>
                <tr>
                <tr>
                    <td>
                        Pharma - Dosage Form
                    </td>
                    <td>
                        {{ product.PharmaDosageForm }}
                    </td>
                <tr>
                </tbody>
            </table>
        </div>


        <hr>
        <h2>Linked Supplier Offers</h2>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                <tr>
                    <th scope="col">Supplier</th>
                    <th scope="col">Title</th>
                    <th scope="col">Purchase Price</th>
                    <th scope="col">Lead Time</th>
                    <th scope="col">Price Valid Until</th>
                </tr>
                </thead>
                <tbody>
                {% for supplierOffer in product.supplierOffers %}
                <tr>
                    <td>
                        <a href="{{ path('app_admin_supplier_show', {id: supplierOffer.supplier.id }) }}">{{ supplierOffer.supplier.name }}</a>
                    </td>
                    <td>
                        {{ supplierOffer.productTitle }}
                    </td>
                    <td>
                        {{ supplierOffer.PurchasePrice }}
                    </td>
                    <td>
                        {{ supplierOffer.leadTimeDays }}
                    </td>
                    <td>
                        {{ supplierOffer.PurchasePriceValidUntil ? supplierOffer.PurchasePriceValidUntil|date('Y-m-d H:i') : 'â€”' }}
                    </td>
                <tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>



    </div>
</div>


